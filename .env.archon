# ============================================================================
# ARCHON DEPLOYMENT CONFIGURATION
# ============================================================================

# Domain Configuration
DOMAIN=archon.transgate.ai
ARCHON_FRONTEND_DOMAIN=archon.transgate.ai
ARCHON_API_DOMAIN=api.archon.transgate.ai

# ============================================================================
# SUPABASE CONFIGURATION (Required)
# ============================================================================
# Get your SUPABASE_URL from: https://supabase.com/dashboard/project/<project-id>/settings/api
SUPABASE_URL=

# ⚠️  CRITICAL: Use SERVICE ROLE key, NOT the anon key!
# Get from: https://supabase.com/dashboard/project/<project-id>/settings/api
# Look for "service_role (secret)" - longer key that contains "service_role" in JWT
SUPABASE_SERVICE_KEY=

# ============================================================================
# AI API KEYS (Optional - can be configured via UI)
# ============================================================================
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=

# ============================================================================
# ARCHON SERVICE PORTS
# ============================================================================
ARCHON_SERVER_PORT=8181
ARCHON_MCP_PORT=8051
ARCHON_AGENTS_PORT=8052
ARCHON_UI_PORT=3737

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================
# Host for internal service communication
HOST=localhost

# Logging
LOG_LEVEL=INFO
LOGFIRE_TOKEN=

# Environment
NODE_ENV=production
VITE_API_URL=https://api.archon.transgate.ai

# ============================================================================
# SSL/CERTBOT SETTINGS
# ============================================================================
LETSENCRYPT_EMAIL=mou.abdelhamid@gmail.com

# ============================================================================
# NGINX SETTINGS
# ============================================================================
# Max upload size for documents
CLIENT_MAX_BODY_SIZE=100m
PROXY_READ_TIMEOUT=300
PROXY_CONNECT_TIMEOUT=300
